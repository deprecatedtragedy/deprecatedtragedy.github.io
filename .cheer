;; cheer's Emacs !
;; start with emacs -q --load .cheer


(require 'package)
(setq package-archives '(("gnu"   . "http://mirrors.tuna.tsinghua.edu.cn/elpa/gnu/")
                         ("melpa" . "http://mirrors.tuna.tsinghua.edu.cn/elpa/melpa/")))
(package-initialize)

(when (not package-archive-contents)
  (package-refresh-contents))

(defvar sugars
  '(better-defaults
    material-theme
    neotree
    elpy
    flycheck))

(mapc #'(lambda (package)
  (unless (package-installed-p package)
    (package-install package)))
    sugars)

(elpy-enable)
(when (require 'flycheck nil t)
  (setq elpy-modules (delq 'elpy-module-flymake elpy-modules))
  (add-hook 'elpy-mode-hook 'flycheck-mode))
(require 'better-defaults)
(load-theme 'material t)
(setq inhibit-startup-message t)

(global-set-key (kbd "<f8>") 'neotree-toggle)
(global-set-key (kbd "<f9>") 'global-display-line-numbers-mode)
(global-display-line-numbers-mode)

(setq backup-directory-alist `(("." . "~/.emacs.d/.saves")))

;(set-language-environment 'UTF-8) 
;(set-locale-environment "UTF-8") 
(set-default-font "Monaco")
(set-fontset-font t 'han (font-spec :family "Microsoft YaHei UI"))

(custom-set-faces
 '(line-number ((t (:inherit (shadow default) :foreground "hot pink" :family "Jockey One")))))

